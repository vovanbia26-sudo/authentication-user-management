            },
            "url": {
              "raw": "{{baseUrl}}/users/manage/USER_ID_HERE/role",
              "host": ["{{baseUrl}}"],
              "path": ["users", "manage", "USER_ID_HERE", "role"]
            }
          }
        }
      ]
    },
